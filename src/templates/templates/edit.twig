{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% set isNewTemplate = (not template.id) %}

{% if isNewTemplate %}
    {% set title = "Setup a new template" | t('hop-docusign') %}
{% else %}
    {% set title = template.form_handle %}
{% endif %}

{# This puts the save button #}
{% set fullPageForm = true %}

{% set content %}

    {{ actionInput('hop-docusign/templates/save-template') }}
    {{ redirectInput("hop-docusign/templates") }}

    {{ forms.hidden({
        id: 'id',
        name: 'id',
        value: template.id ? template.id : null })
    }}

    {{ forms.textField({
        label: 'Form Handle',
        instructions: 'Enter the freeform form handle to be linked',
        id: 'form_handle',
        name: 'form_handle',
        value: template.form_handle})
    }}

    {{ forms.textField({
        label: 'Email Handle',
        instructions: 'Enter the freeform field handle for the signer\'s email',
        id: 'email_handle',
        name: 'email_handle',
        value: template.email_handle})
    }}

    {{ forms.textField({
        label: 'Recipient Name',
        instructions: 'Freeform text field handles allowed<br>Example: <strong>{firstName} {lastName}</strong>',
        id: 'recipient_name',
        name: 'recipient_name',
        value: template.recipient_name})
    }}

    {{ forms.textField({
        label: 'Email Subject',
        instructions: 'Freeform text field handles allowed with the addition of {clientUserId}, which is a randomized string to prompt the dynamic signing process<br>Example: <strong>New Submission from {firstName} {lastName} {clientUserId}</strong>',
        id: 'email_subject',
        name: 'email_subject',
        value: template.email_subject})
    }}

    {{ forms.textField({
        label: 'DocuSign Template Role',
        id: 'template_role',
        name: 'template_role',
        value: template.template_role})
    }}

    {{ forms.textField({
        label: 'DocuSign Template ID',
        id: 'template_id',
        name: 'template_id',
        value: template.template_id})
    }}

{% endset %}